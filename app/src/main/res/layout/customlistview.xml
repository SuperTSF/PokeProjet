<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="@drawable/cadrepokemonlist">


    <ImageView
        android:id="@+id/pokemonImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Sprite Pokemon"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/pokemonNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulbizarre"
            android:textSize="18sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/pokemonNationalDex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="1"
            android:textSize="15sp" />



    </LinearLayout>
</LinearLayout>